<%= form_for(@burger) do |f| %>
  <% if @burger.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@burger.errors.count, "error") %> prohibited this burger from being saved:</h2>

      <ul>
      <% @burger.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <p>To review a new burger, you need to create one</p>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
 
  <div class="field">

    <%= f.label :profile_picture, 'Select the image file or url:' %><br>
    
    <%= f.file_field :profile_picture %>
    <%= f.text_field :remote_image_url, value: nil, placeholder: 'or paste url here' %>
  </div>
  <br>
 <p>Choose a restaurant in the list or add a new one</p>
  <div>
      <% Restaurant.all.each do |restaurant| %>
        <%= check_box_tag "restaurant_ids[]", restaurant.id %>
        <%= f.label :restaurant_ids, restaurant.name %>
        <br>
      <% end %>
   </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

