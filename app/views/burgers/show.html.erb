<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @burger.name %>
</p>
<p>
  <strong>Restaurant name:</strong><br>
  <%= @burger.restaurant.name %>

</p>
<p>
  <strong>Price:</strong>
  <%= @burger.price %>
</p>

<p>
  <strong>picture:</strong>
  <%= image_tag@burger.profile_picture.detail.url %>
</p>


<p>
  <% if @burger.ratings.blank?%>
    <%= 'No ratings yet! Add one!' %>
  <% else %>
    

  <strong>burgers rating:</strong><br>
  <em><%= "#{@reviews.length} reviews" %></em><br>
  <% @burger.ratings.limit(1).each do |rating| %>
    <tr>
      <td>meat rating: <%= @avg_review_meat %></td><br>

      <td>cheese rating: <%= @avg_review_cheese %></td><br>
      <td>toppings rating: <%= @avg_review_toppings %></td><br>
      <td>bun_rating: <%= @avg_review_bun %></td><br>
      <td>user email: <%= rating.user.email %></td><br>

    </tr>
      <% end %>
    <% end %>
</p>

<%= link_to 'Add a review to this burger', new_burger_rating_path(@burger) %> |
<%= link_to 'review a new burger', new_burger_path %> |
<%= link_to 'Back', burgers_path %>
